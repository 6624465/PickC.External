                $('#mbl').validate({
                    rules: {
                        mobileNumber: {
                            required: true,
                            minlength: 10,
                            maxlength: 10
                        }
                    }                
                });
                function MobileNo() {
                    debugger
                    var inpObj = document.getElementById("mbl");
                    if ($('#mbl').valid()) {
                        $('#mbl').submit();
                    }
                }
                $.validator.addMethod('MobileNoCss', function (value) {
                    debugger;
                    var test = /^[789]\d{9}$/.test(value);
                    return /^[789]\d{9}$/.test(value);
                }, 'Please enter correct Mobile Number');
            });
            function changeSupport() {
                var i = $('#Type').val();
                debugger;
                if (i == "ContactUs") {
                    $('.cn').show();
                    $('.cs').hide();
                    $('.fd').hide();
                }
                if (i == "CustomerSupport") {
                    $('.cs').show();
                    $('.cn').hide();
                    $('.fd').hide();
                }
                if (i == "FeedBack") {
                    $('.fd').show();
                    $('.cn').hide();
                    $('.cs').hide();
                }
            }
</script>
