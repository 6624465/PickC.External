                        <div class="col-md-12">
                            <div class="form-group select contact-input">
                                <select class="form-control input-align" id="Type" name="Type" onchange="changeSupport()">
                                    <option value="ContactUs">Contact Us</option>
                                    <option value="FeedBack">FeedBack</option>
                                    <option value="CustomerSupport" selected="selected">Customer Support</option>
                                </select>
                            </div>
                        </div>
